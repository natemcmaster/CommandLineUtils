{
  "$schema": "https://dotnet.github.io/docfx/schemas/v1.0/schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/**.csproj"
          ],
          "src": "../",
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "**/CommandLineUtils.Generators/**"
          ]
        }
      ],
      "dest": "api/",
      "filter": "filterConfig.yml",
      "properties": {
        "TargetFramework": "net8.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.yml",
          "**/*.md"
        ],
        "exclude": [
          "obj/",
          "**.meta",
          "README.md",
          "filterConfig.yml"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          ".nojekyll",
          ".gitattributes",
          "images/**",
          "*.png"
        ],
        "exclude": [
          "obj/",
          "**.meta"
        ]
      }
    ],
    "overwrite": "apispec/*.md",
    "dest": "../.build/docs/gh-pages",
    "template": [
      "default",
      "modern",
      "./theme"
    ],
    "postProcessors": [
      "ExtractSearchIndex"
    ],
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false,
    "globalMetadata": {
      "_appName": "CommandLineUtils",
      "_appFooter": " ",
      "_appLogoPath": "logo.png",
      "_enableSearch": true
    }
  }
}
